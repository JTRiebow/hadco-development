{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "target": "es5",
        "types": [
            "jquery",
            "angular",
            "angular-material",
            "angular-animate",
            "node"
        ],
        "watch": true,
        "noStrictGenericChecks": true,
        "skipLibCheck": true,
        "allowUnreachableCode": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/external/**/*"
    ]
}